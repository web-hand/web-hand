{
  "name": "web-hand",
  "version": "1.0.0",
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/web-hand.js",
  "modern": "dist/modern.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "type": "module",
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/web-hand",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-hand/web-hand.git"
  },
  "scripts": {
    "postinstall": "git config core.hooksPath ./git-hooks",
    "start": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "pretyprint": "prettier --check .",
    "pretyprint:fix": "prettier --write .",
    "test": "mocha -r @swc/register",
    "test:watch": "mocha -r @swc/register --w --watch-files test/**/*.spec.ts",
    "test:coverage": "nyc --reporter=html --reporter=text mocha -r @swc/register",
    "test:watch:coverage": "nyc --reporter=html --reporter=text mocha -r @swc/register --w --watch-files test/**/*.spec.ts"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@swc/core": "^1.2.211",
    "@swc/register": "^0.1.10",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^3.2.0",
    "jsdom": "^20.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
